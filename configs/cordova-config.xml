<?xml version='1.0' encoding='utf-8'?>
<widget id="" version="" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>App Name</name>
    <description>
        App Description
    </description>
    <author email="application author's e-mail" href="http://mycompany.com">
        application's author
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <hook type="before_compile" src="hooks/reset_mfpSplash.js" />
    <platform name="android">
        <hook type="after_prepare" src="hooks/androidManifest.js" />
        <allow-intent href="market:*" />
        <icon src="images/android/icon/drawable-ldpi-icon.png" density="ldpi" />
        <icon src="images/android/icon/drawable-mdpi-icon.png" density="mdpi" />
        <icon src="images/android/icon/drawable-hdpi-icon.png" density="hdpi" />
        <icon src="images/android/icon/drawable-xhdpi-icon.png" density="xhdpi" />
        <icon src="images/android/icon/drawable-xxhdpi-icon.png" density="xxhdpi" />
        <icon src="images/android/icon/drawable-xxxhdpi-icon.png" density="xxxhdpi" />

        <splash src="images/android/splash/drawable-land-hdpi-screen.png" density="land-hdpi"/>
        <splash src="images/android/splash/drawable-land-ldpi-screen.png"  density="land-ldpi"/>
        <splash src="images/android/splash/drawable-land-mdpi-screen.png"  density="land-mdpi"/>
        <splash src="images/android/splash/drawable-land-xhdpi-screen.png"  density="land-xhdpi"/>
        <splash src="images/android/splash/drawable-land-xxhdpi-screen.png"  density="land-xxhdpi"/>
        <splash src="images/android/splash/drawable-land-xxxhdpi-screen.png"  density="land-xxxhdpi"/>
        <splash src="images/android/splash/drawable-port-hdpi-screen.png"  density="hdpi"/>
        <splash src="images/android/splash/drawable-port-ldpi-screen.png"  density="ldpi"/>
        <splash src="images/android/splash/drawable-port-mdpi-screen.png"  density="mdpi"/>
        <splash src="images/android/splash/drawable-port-xhdpi-screen.png"  density="xhdpi"/>
        <splash src="images/android/splash/drawable-port-xxhdpi-screen.png"  density="xxhdpi"/>
        <splash src="images/android/splash/drawable-port-xxxhdpi-screen.png"  density="xxxhdpi"/>
        <!--preference name="android-targetSdkVersion" value="30"/>
        <preference name="android-minSdkVersion" value="29"/-->
        <preference name="loglevel" value="ERROR" />
    </platform>
    <platform name="ios">
        <edit-config file="*-Info.plist" mode="merge" target="NSBluetoothPeripheralUsageDescription">
            <string>Scans bar codes.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
            <string>Captures photos for attachments or scans a bar code. The app uses camera to scan and import work orders into your work log.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysAndWhenInUseUsageDescription">
            <string>Your location is used to plan and route work activities.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
            <string>our location is used to plan and route work activities.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationUsageDescription">
            <string>Your location is used to plan and route work activities.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>Your location is used to plan and route work activities.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryAddUsageDescription" >
            <string>Captures photos for attachments or scans a bar code. The app uses camera to scan and import work orders into your work log.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
            <string>Captures photos for attachments.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="UIBackgroundModes">
            <array>
                <string>fetch</string>
                <string>location</string>
                <string>remote-notification</string>
            </array>
        </edit-config>

        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="57" src="images/ios/icon/icon.png" width="57" />
        <icon height="114" src="images/ios/icon/icon@2x.png" width="114" />
        <icon height="50" src="images/ios/icon/icon-50.png" width="50" />
        <icon height="100" src="images/ios/icon/icon-50@2x.png" width="100" />
        <icon height="60" src="images/ios/icon/icon-60.png" width="60" />
        <icon height="180" src="images/ios/icon/icon-60@3x.png" width="180" />
        <icon height="120" src="images/ios/icon/icon-60@2x.png" width="120" />
        <icon height="72" src="images/ios/icon/icon-72.png" width="72" />
        <icon height="144" src="images/ios/icon/icon-72@2x.png" width="144" />
        <icon height="76" src="images/ios/icon/icon-76.png" width="76" />
        <icon height="152" src="images/ios/icon/icon-76@2x.png" width="152" />
        <icon height="167" src="images/ios/icon/icon-83.5@2x.png" width="167" />
        <icon height="40" src="images/ios/icon/icon-40.png" width="40" />
        <icon height="80" src="images/ios/icon/icon-40@2x.png" width="80" />
        <icon height="120" src="images/ios/icon/icon-40@3x.png" width="120" />
        <icon height="29" src="images/ios/icon/icon-small.png" width="29" />
        <icon height="58" src="images/ios/icon/icon-small@2x.png" width="58" />
        <icon height="87" src="images/ios/icon/icon-small@3x.png" width="87" />
        <icon height="1024" src="images/ios/icon/icon-1024.png" width="1024" />

        <splash src="images/ios/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="images/ios/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="images/ios/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="images/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="images/ios/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="images/ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="images/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="images/ios/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="images/ios/splash/Default-736h.png" width="1242" height="2208"/>

        <splash src="images/ios/splash/Default-2436h.png" width="1125" height="2436"/>
        <splash src="images/ios/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
        <splash src="images/ios/splash/Default-Landscape-2436h.png" width="2436" height="1125"/>
        <feature name="CDVWKWebViewEngine">
            <param name="ios-package" value="CDVWKWebViewEngine" />
        </feature>
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
        <preference name="WKWebViewOnly" value="true" />
    </platform>
    <platform name="windows">
        <!--Since there is conflict with barcode, we put a superset of capabilities needed-->
        <config-file target="package.appxmanifest" parent="/Package/Capabilities">
            <Capability Name="internetClientServer" />
            <Capability Name="privateNetworkClientServer" />
            <DeviceCapability Name="webcam" />
            <DeviceCapability Name="location" />
            <DeviceCapability Name="microphone" />
        </config-file>
        <icon src="images/windows/icon/Square71x71Logo.png" target="Square71x71Logo"/>
        <icon src="images/windows/icon/Square150x150Logo.png" target="Square150x150Logo"/>
        <icon src="images/windows/splash/Wide310x150Logo.png" target="Wide310x150Logo"/>
        <icon src="images/windows/icon/Square310x310Logo.png" target="Square310x310Logo"/>
        <icon src="images/windows/icon/Square44x44Logo.png" target="Square44x44Logo"/>
        <icon src="images/windows/icon/StoreLogo.png" target="StoreLogo"/>
        <icon src="images/windows/icon/Square44x44Logo.png" target="BadgeLogo"/>
        <splash src="images/windows/splash/SplashScreen.png" target="splashscreen"/>
  </platform>
</widget>
